<div class="container">
	<div class="col-6 float-right">
		<div class="row">
			<div class="col-3">
				<%= image_tag @category.image.url, height: 150, width: 150 %>
			</div>
			<h1 class="col-9 text-center my-auto">
				<%= @category.name %>
			</h1>
		</div>
	</div>	

	<% @topics.each do |topic| %>
		<div class="row">
			<div class="col-2">
				<% image_tag topic&.image&.url %>
			</div>
		</div>
	<% end %>
</div>