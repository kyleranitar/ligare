<div class="container">
	<h1 class="text-center mt-5">What do you want to learn?</h1>
	<!-- <input class="mx-auto d-block w-25 mt-4" type="text" placeholder="Search.."> -->

	<%= form_tag("/search", method: "get", class: "mx-auto d-block w-50 mt-4") do %>
	  <div class="row">
		  <%= text_field_tag(:q, nil, placeholder: "type your topic here", size: "50", style: "border: none; border-bottom: 1px solid gray", class: "text-center mr-1") %>
		  <%= submit_tag("Find") %>
	  </div>
	<% end %>

	<div class="row mt-5">
		<% @categories.each do |category| %>
			<a class="w-100" href="<%= category_path(category) %>" style="text-decoration: none">
				<div class="col-md-4">
				  <div class="row m-2 my-4" >
				    <div class="col-3 mx-auto d-block"><%= image_tag category.image.url, height: 100, width: 100 %></div>
				    <h4 class="col-9 my-auto text-center"><%= category&.name&.upcase %></h4>
				  </div>
				</div>
			</a>
		<% end %>
		<h5 class="text-center w-100">
			<%= "No Results Found." if @categories.empty? %>
		</h5>
	</div>
</div>
